<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.classmonitor.ui.controllers.SettingsController">

    <top>
        <VBox spacing="8">
            <padding>
                <Insets top="15" right="15" bottom="10" left="15"/>
            </padding>

            <Label text="Application Settings"
                   style="-fx-font-size:18px; -fx-font-weight:bold;"/>

            <Separator/>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <content>
                <VBox spacing="18">
                    <padding>
                        <Insets top="18" right="18" bottom="18" left="18"/>
                    </padding>

                    <!-- ================= GPA THRESHOLDS ================= -->
                    <TitledPane text="GPA Classification Thresholds" expanded="true">
                        <content>
                            <VBox spacing="14">
                                <padding>
                                    <Insets top="12" right="12" bottom="12" left="12"/>
                                </padding>

                                <Label text="Define how students are categorized on the dashboard."
                                       wrapText="true"/>

                                <GridPane hgap="15" vgap="12">
                                    <columnConstraints>
                                        <ColumnConstraints minWidth="170"/>
                                        <ColumnConstraints minWidth="120"/>
                                        <ColumnConstraints hgrow="ALWAYS"/>
                                    </columnConstraints>

                                    <Label text="At-Risk Threshold:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                    <Spinner fx:id="spAtRisk" prefWidth="110"
                                             GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                                    <Label text="GPA &lt; this value = AT RISK"
                                           GridPane.rowIndex="0" GridPane.columnIndex="2"/>

                                    <Label text="Average Threshold:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                    <Spinner fx:id="spAverage" prefWidth="110"
                                             GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                                    <Label text="At-Risk ≤ GPA &lt; this value = AVERAGE"
                                           GridPane.rowIndex="1" GridPane.columnIndex="2"/>

                                    <Label text="Top Threshold:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                    <Spinner fx:id="spTop" prefWidth="110"
                                             GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                                    <Label text="GPA ≥ this value = TOP STUDENT"
                                           GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                                </GridPane>

                                <Label fx:id="lblThresholdHint"
                                       style="-fx-text-fill:#555555;"
                                       wrapText="true"/>
                            </VBox>
                        </content>
                    </TitledPane>

                    <!-- ================= PROGRAMME MANAGEMENT ================= -->
                    <TitledPane text="Programme Management" expanded="true">
                        <content>
                            <VBox spacing="12">
                                <padding>
                                    <Insets top="12" right="12" bottom="12" left="12"/>
                                </padding>

                                <Label text="Add, rename, or delete programmes used in student records."
                                       wrapText="true"/>

                                <ListView fx:id="lvProgrammes" prefHeight="220"/>

                                <HBox spacing="10">
                                    <TextField fx:id="txtProgramme"
                                               promptText="Programme name..."
                                               HBox.hgrow="ALWAYS"/>
                                    <Button text="Add" onAction="#onAddProgramme"/>
                                    <Button text="Rename" onAction="#onRenameProgramme"/>
                                    <Button text="Delete" onAction="#onDeleteProgramme"/>
                                </HBox>

                                <Label fx:id="lblProgMsg" style="-fx-text-fill:#666666;" wrapText="true"/>
                            </VBox>
                        </content>
                    </TitledPane>

                </VBox>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="12" right="15" bottom="15" left="15"/>
            </padding>

            <Button text="Close" onAction="#onClose"/>
            <Button text="Save Settings" defaultButton="true" onAction="#onSave"/>
        </HBox>
    </bottom>

</BorderPane>
