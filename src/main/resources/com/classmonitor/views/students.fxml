<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.classmonitor.ui.controllers.StudentsController"
            style="-fx-font-family:'Segoe UI'; -fx-font-size:13px;">

    <left>
        <VBox spacing="14" style="-fx-background-color: rgba(0,0,0,0.22);">
            <padding><Insets top="18" right="12" bottom="18" left="12"/></padding>

            <Label text="CM" style="-fx-font-size:18px; -fx-font-weight:900;"/>
            <Separator opacity="0.35"/>

            <Button text="ðŸ " onAction="#openDashboard"
                    style="-fx-font-size:18px; -fx-font-weight:800;
                           -fx-min-width:58; -fx-min-height:58;
                           -fx-pref-width:58; -fx-pref-height:58;
                           -fx-max-width:58; -fx-max-height:58;
                           -fx-background-radius:999; -fx-border-radius:999; -fx-border-width:2;">
                <tooltip><Tooltip text="Dashboard"/></tooltip>
            </Button>

            <Button text="ðŸ“Š" onAction="#openReports"
                    style="-fx-font-size:18px; -fx-font-weight:800;
                           -fx-min-width:58; -fx-min-height:58;
                           -fx-pref-width:58; -fx-pref-height:58;
                           -fx-max-width:58; -fx-max-height:58;
                           -fx-background-radius:999; -fx-border-radius:999; -fx-border-width:2;">
                <tooltip><Tooltip text="Reports"/></tooltip>
            </Button>

            <Button text="â¬†â¬‡" onAction="#openImportExport"
                    style="-fx-font-size:15px; -fx-font-weight:900;
                           -fx-min-width:58; -fx-min-height:58;
                           -fx-pref-width:58; -fx-pref-height:58;
                           -fx-max-width:58; -fx-max-height:58;
                           -fx-background-radius:999; -fx-border-radius:999; -fx-border-width:2;">
                <tooltip><Tooltip text="Import / Export"/></tooltip>
            </Button>

            <Button text="âš™" onAction="#openSettings"
                    style="-fx-font-size:18px; -fx-font-weight:800;
                           -fx-min-width:58; -fx-min-height:58;
                           -fx-pref-width:58; -fx-pref-height:58;
                           -fx-max-width:58; -fx-max-height:58;
                           -fx-background-radius:999; -fx-border-radius:999; -fx-border-width:2;">
                <tooltip><Tooltip text="Settings"/></tooltip>
            </Button>

            <Region VBox.vgrow="ALWAYS"/>
            <Label text="Students" opacity="0.6"/>
        </VBox>
    </left>

    <top>
        <VBox spacing="10" style="-fx-padding:14 16; -fx-background-color: rgba(255,255,255,0.04);">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Students" style="-fx-font-size:18px; -fx-font-weight:900;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="statusLabel" text="Ready" opacity="0.75"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Search..." HBox.hgrow="ALWAYS"/>
                <Button text="Search" onAction="#doSearch"
                        style="-fx-font-weight:900; -fx-padding:10 16; -fx-background-radius:14;"/>
                <Button text="Refresh" onAction="#refresh"
                        style="-fx-font-weight:900; -fx-padding:10 16; -fx-background-radius:14;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.64">
            <VBox spacing="10" style="-fx-padding:14; -fx-background-color: rgba(255,255,255,0.06); -fx-background-radius:14;">
                <Label text="Student List" style="-fx-font-weight:800;"/>
                <TableView fx:id="table" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="120"/>
                        <TableColumn fx:id="colName" text="Name" prefWidth="220"/>
                        <TableColumn fx:id="colProgramme" text="Programme" prefWidth="170"/>
                        <TableColumn fx:id="colLevel" text="Level" prefWidth="80"/>
                        <TableColumn fx:id="colGpa" text="GPA" prefWidth="70"/>
                        <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                        <TableColumn fx:id="colPhone" text="Phone" prefWidth="140"/>
                        <TableColumn fx:id="colStatus" text="Status" prefWidth="90"/>
                    </columns>
                </TableView>
            </VBox>

            <VBox spacing="10" style="-fx-padding:14; -fx-background-color: rgba(255,255,255,0.06); -fx-background-radius:14;">
                <Label text="Student Form" style="-fx-font-weight:900; -fx-font-size:14px;"/>

                <TextField fx:id="idField" promptText="Student ID"/>
                <TextField fx:id="nameField" promptText="Full Name"/>
                <ComboBox fx:id="programmeCombo" promptText="Programme" editable="true"/>
                <ComboBox fx:id="levelCombo" promptText="Level"/>
                <TextField fx:id="gpaField" promptText="GPA"/>
                <TextField fx:id="emailField" promptText="Email"/>
                <TextField fx:id="phoneField" promptText="Phone"/>
                <ComboBox fx:id="statusCombo" promptText="Status"/>

                <HBox spacing="10">
                    <Button text="Add" onAction="#addStudent" HBox.hgrow="ALWAYS"
                            style="-fx-font-weight:900; -fx-padding:12 16; -fx-background-radius:14;"/>
                    <Button text="Update" onAction="#updateStudent" HBox.hgrow="ALWAYS"
                            style="-fx-font-weight:900; -fx-padding:12 16; -fx-background-radius:14;"/>
                </HBox>

                <Button text="Delete" onAction="#deleteStudent"
                        style="-fx-font-weight:900; -fx-padding:12 16; -fx-background-radius:14;"/>
            </VBox>
        </SplitPane>
    </center>

</BorderPane>